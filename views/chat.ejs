<html>
    <head>
        <title>chat</title>
    </head>
    <body>
        <script>
            let FROM_USER = window.location.search.split("&")[0].split("=")[1];
            let TO_USER = window.location.search.split("&")[1].split("=")[1];
            let showURL = () => {
                console.log(FROM_USER + "\n" + TO_USER);
            }
            let send = async () => {
                document.getElementById("received").value += FROM_USER + '->' + document.getElementById("message").value + '\n';
                
                var myHeaders = new Headers();
                myHeaders.append("Content-Type", "application/json");

                var raw = JSON.stringify({"message":document.getElementById("message").value,"from" : FROM_USER,"to":TO_USER});
                document.getElementById("message").value = "";
                var requestOptions = {
                    method: 'POST',
                    headers: myHeaders,
                    body: raw,
                    redirect: 'follow'
                };

                await fetch("http://localhost:3000/messages/sendMessage", requestOptions)
                    .then(response => response.text())
                    .then(result => console.log(result))
                    .catch(error => console.log('error', error));
                
            }

            let id = 0;
            let path = "getAllMessages";
            let get = async () => {
                var myHeaders = new Headers();
                myHeaders.append("Content-Type", "application/json");

                var raw = JSON.stringify({"from":TO_USER,"to":FROM_USER,"id":id});

                var requestOptions = {
                    method: 'POST',
                    headers: myHeaders,
                    body: raw,
                    redirect: 'follow'
                };
                
                await fetch("http://localhost:3000/messages/" + path, requestOptions)
                .then(response => response.json())
                .then(result => {
                    if(result.length !== 0){
                        for (let i=0; i<result.length;i++) {
                            document.getElementById("received").value += '\n' + result[i].fromUser + '->' + result[i].messageData;
                        }
                        document.getElementById("received").value += '\n';
                        id = result[result.length - 1].id;
                        console.log(id);
                        path = "receiveNewMessages";
                    }
                })
                .catch(error => console.log('error', error));
                
                setTimeout(()=>{
                    get();
                }, 1000);
            }
            get();
        </script>

        <textarea name="message" id="message" cols="60" rows="30"></textarea>
        <input type="button" value="submit" onclick="send()">
        <textarea name="received" id="received" cols="60" rows="30"></textarea>
        
    </body>
</html>
